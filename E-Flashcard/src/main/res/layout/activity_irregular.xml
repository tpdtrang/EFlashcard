<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_margin"
    android:orientation="vertical"
    tools:context="tuyenmanucian.e_flashcard.IrregularActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/edIrre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:hint="Nhập từ cần tra... "
            android:textSize="20dp"
            android:background="@drawable/duongvien_goctron"
            android:gravity="top"
            android:inputType="textVisiblePassword" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@drawable/exit"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvVerbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_margin"
        android:gravity="center"
        android:text="Bảng động từ bất quy tắc"
        android:textColor="#f00"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#FF00FFEA">

        <TextView
            android:id="@+id/tv_stt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STT" />
        <TextView
            android:id="@+id/tv_verbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ĐT nguyên mẫu" />
        <TextView
            android:id="@+id/tv_verb_QKD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quá khứ đơn"/>
        <TextView
            android:id="@+id/tv_verb_QKPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quá khứ phân từ"/>
        <TextView
            android:id="@+id/Nghia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nghĩa của động từ"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvVerbs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF00FFEA">

    </ListView>


</LinearLayout>
